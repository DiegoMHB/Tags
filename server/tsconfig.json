{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/controllers/users.ts",
    "src/dev/InitializersFunctions.ts"
  ],
  "exclude": ["node_modules","src/**/*.test.ts"]
}
